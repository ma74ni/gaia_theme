<!DOCTYPE html>
<html lang="{{ app.getLocale }}">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <!-- CSRF Token -->
        <meta name="csrf-token" content="{{ csrf_token() }}" />

        <title>Home</title>

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400&family=Roboto:wght@400;500;700&display=swap"
            rel="stylesheet"
        />

        <!-- Scripts -->
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/app.min.css?v=3') }}" />
    </head>
    <body>
        <!--Variables-->
        {% set iconAccount = 'images/icons/account_circle.svg' %} {% set iconBox
        = 'images/icons/inventory.svg' %} {% set iconShoping =
        'images/icons/shopping_cart.svg' %} {% set logo ='images/logo.png' %} {%
        set iconInputSearch = 'images/icons/icon_prefix.svg' %} {% set page =
        {'search':true, 'casa': 'no'} %} {% set iconSearch =
        'images/icons/search.svg' %} {% set iconMenu = 'images/icons/menu.svg'
        %} {% set items = [ { url: url('/lluvia'), label: 'Días lluviosos' }, {
        url: url('/regreso'), label: 'Regreso a clases'}, { url: url('/estilo'),
        label: 'Estílo de vida'}, { url: url('/tech'), label: 'Tecnología'} ] %}
        {% set slides = [{img:'images/slides/first.jpg', first: true},
        {img:'images/slides/second.jpg', first: false}] %}
        <!--Fin Variables-->
        <header class="header">
            <div class="header-top">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <div class="row align-items-center">
                                <div class="col-3">
                                    <a href="/" class="navbar-brand">
                                        <img
                                            src="{{ asset(logo) }}"
                                            alt="Logo"
                                        />
                                    </a>
                                </div>
                                {% if page.search %}
                                <div class="col">
                                    <div class="row">
                                        <div class="col header-search-bar">
                                            <div class="row">
                                                <div class="col-1">
                                                    <img
                                                        class="header-search-icon"
                                                        src="{{
                                                            asset(
                                                                iconInputSearch
                                                            )
                                                        }}"
                                                        alt=""
                                                    />
                                                </div>
                                                <div class="col-11">
                                                    <input
                                                        class="header-input"
                                                        type="text"
                                                        placeholder="Buscar aquí..."
                                                    />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-1">
                                            <img
                                                class="header-search-icon search-blue"
                                                src="{{ asset(iconSearch) }}"
                                                alt=""
                                            />
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-4 d-flex justify-content-end">
                            <button
                                type="button"
                                class="btn d-flex align-items-center"
                            >
                                <img
                                    src="{{ asset(iconShoping) }}"
                                    class="icon-start"
                                    alt=""
                                />
                                Carrito de compras
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="header-nav">
                <div class="container">
                    <nav class="navbar navbar-expand-lg">
                        <div class="d-flex justify-content-between w-100">
                            <div class="d-flex">
                                <div
                                    class="collapse navbar-collapse"
                                    id="navbarSupportedContent"
                                >
                                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                        <li>
                                            <a
                                                class="nav-link d-flex align-items-center"
                                                href="#"
                                            >
                                                <img
                                                    src="{{ asset(iconMenu) }}"
                                                    alt=""
                                                />
                                                Menú
                                            </a>
                                        </li>
                                        {% for item in items %}
                                        <li>
                                            <a
                                                href="{{ item.url }}"
                                                class="nav-link"
                                                >{{ item.label }}</a
                                            >
                                        </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                            <div>
                                <ul class="navbar-nav">
                                    <li class="nav-item dropdown">
                                        <a
                                            class="nav-link dropdown-toggle"
                                            href="#"
                                            role="button"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false"
                                        >
                                            <img
                                                src="{{ asset(iconAccount) }}"
                                                class="icon-start"
                                                alt=""
                                            />
                                            Usuario
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a
                                                    class="dropdown-item"
                                                    href="#"
                                                    >Salir</a
                                                >
                                            </li>
                                        </ul>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#" class="nav-link">
                                            <img
                                                src="{{ asset(iconBox) }}"
                                                class="icon-start"
                                                alt=""
                                            />
                                            Mis pedidos</a
                                        >
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        <main>
            <div
                id="carouselExampleControls"
                class="carousel slide"
                data-bs-ride="carousel"
            >
                <div class="carousel-inner">
                    {% for slide in slides %}
                    <div
                        class="carousel-item {{ slide.first ? 'active' : '' }}"
                    >
                        <img
                            src="{{ asset(slide.img) }}"
                            class="d-block w-100"
                            alt=""
                        />
                    </div>
                    {% endfor %}
                </div>
                <button
                    class="carousel-control-prev"
                    type="button"
                    data-bs-target="#carouselExampleControls"
                    data-bs-slide="prev"
                >
                    <span
                        class="carousel-control-prev-icon"
                        aria-hidden="true"
                    ></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button
                    class="carousel-control-next"
                    type="button"
                    data-bs-target="#carouselExampleControls"
                    data-bs-slide="next"
                >
                    <span
                        class="carousel-control-next-icon"
                        aria-hidden="true"
                    ></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div>products</div>
            <div>banner</div>
            <div>products</div>
        </main>
        <footer>footer</footer>

        <script src="{{ asset('js/jquery-3.6.0.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
    </body>
</html>
